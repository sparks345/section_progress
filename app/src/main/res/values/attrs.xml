<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SectionProgressBar">
        <!--分隔块儿颜色-->
        <attr name="split_block_color" format="color"/>
        <!--分隔块儿宽度 默认1dp-->
        <attr name="split_block_width" format="dimension"/>
        <!--分隔块儿高度 >0 <view height, 默认progress view的高度-->
        <attr name="split_block_height" format="dimension"/>

        <!--进度条颜色-->
        <attr name="progress_bar_color" format="color"/>
        <!--进度条中进度的高度 >0 <view height, 默认progress view的高度-->
        <attr name="progress_bar_height" format="dimension"/>

        <!--段落选中启用动画-->
        <attr name="section_anim_on_selection" format="boolean"/>
        <!--段落选中动画闪烁的颜色-->
        <attr name="section_anim_blink_color" format="color"/>
        <!--TODO 段落支持点击选中-->
        <!--<attr name="section_selectable_by_click" format="boolean"/>-->

        <!--次要进度，值要小于主进度-->
        <attr name="sub_progress_bar_color" format="color"/>
        <!--次进度当前进度点-->
        <attr name="sub_progress_bar_thumb" format="reference"/>
        <!--次进度当前进度点尺寸-->
        <attr name="sub_progress_bar_thumb_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="StepSeekBar">
        <!--每个档位的进度-->
        <attr name="step" format="integer"/>
    </declare-styleable>
</resources>